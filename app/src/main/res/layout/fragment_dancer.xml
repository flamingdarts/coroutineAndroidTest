<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DancerFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/dancer_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_scale="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/dancer" />

    <TextView
        android:id="@+id/text_under_dancer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am a dancer"
        android:textSize="16pt"
        android:breakStrategy="simple"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dancer_animation" />

    <Button
        android:id="@+id/tellJoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Tell Joke"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/giveAnswer"
        />
    <Button
        android:id="@+id/giveAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Give Answer"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>